    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Category tabs
            const categoryTabs = document.querySelectorAll('.category-tab');
            const tournamentSections = document.querySelectorAll('.tournament-section');

            categoryTabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    // Remove active class from all tabs
                    categoryTabs.forEach(t => t.classList.remove('active'));
                    categoryTabs.forEach(t => t.classList.add('text-[#ff4655]'));
                    
                    // Add active class to clicked tab
                    tab.classList.add('active');
                    tab.classList.remove('text-[#ff4655]');
                    
                    // Hide all tournament sections
                    tournamentSections.forEach(section => section.classList.add('hidden'));
                    
                    // Show the corresponding tournament section
                    const category = tab.getAttribute('data-category');
                    document.getElementById(category).classList.remove('hidden');
                });
            });

            // Registration form handling
            const registrationForm = document.getElementById('registration-form');
            
            // Register buttons
            document.getElementById('main-register-btn').addEventListener('click', () => {
                // Open the registration form
                registrationForm.classList.add('open');
                
                // Scroll to the form
                registrationForm.scrollIntoView({ behavior: 'smooth' });
                
                // Switch to registration tab
                categoryTabs.forEach(t => {
                    if (t.getAttribute('data-category') === 'registration') {
                        t.click();
                    }
                });
            });
            
            // Also handle the tab click for registration
            categoryTabs.forEach(tab => {
                if (tab.getAttribute('data-category') === 'registration') {
                    tab.addEventListener('click', () => {
                        registrationForm.classList.add('open');
                    });
                }
            });

            // Submit registration
            const submitButtons = document.querySelectorAll('#submit-registration, #submit-form');
            submitButtons.forEach(button => {
                button.addEventListener('click', function() {
                    // Get the form fields based on which form is being submitted
                    const formPrefix = this.id === 'submit-registration' ? '' : 'reg-';
                    
                    // Basic validation
                    const requiredFields = [
                        `${formPrefix}team-name`, 
                        `${formPrefix}team-captain`, 
                        `${formPrefix}contact-email`, 
                        `${formPrefix}contact-phone`, 
                        `${formPrefix}discord-id`,
                        `${formPrefix}player1`, 
                        `${formPrefix}riot-id1`, 
                        `${formPrefix}player2`, 
                        `${formPrefix}riot-id2`, 
                        `${formPrefix}player3`, 
                        `${formPrefix}riot-id3`,
                        `${formPrefix}player4`, 
                        `${formPrefix}riot-id4`, 
                        `${formPrefix}player5`, 
                        `${formPrefix}riot-id5`
                    ];
                    
                    let isValid = true;
                    
                    requiredFields.forEach(field => {
                        const input = document.getElementById(field);
                        if (input && !input.value.trim()) {
                            input.classList.add('border-red-500');
                            isValid = false;
                        } else if (input) {
                            input.classList.remove('border-red-500');
                        }
                    });
                    
                    if (!isValid) {
                        alert('Please fill in all required fields.');
                        return;
                    }
                    
                    // Email validation
                    const emailField = document.getElementById(`${formPrefix}contact-email`);
                    const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    if (emailField && !emailPattern.test(emailField.value)) {
                        emailField.classList.add('border-red-500');
                        alert('Please enter a valid email address.');
                        return;
                    }
                    
                    // Phone validation
                    const phoneField = document.getElementById(`${formPrefix}contact-phone`);
                    if (phoneField && phoneField.value.length < 10) {
                        phoneField.classList.add('border-red-500');
                        alert('Please enter a valid phone number.');
                        return;
                    }
                    
                    // Collect form data
                    const teamName = document.getElementById(`${formPrefix}team-name`).value;
                    const teamCaptain = document.getElementById(`${formPrefix}team-captain`).value;
                    const contactEmail = document.getElementById(`${formPrefix}contact-email`).value;
                    
                    // Create mailto link with form data
                    const subject = encodeURIComponent(`Mini Valorant Tournament Registration - ${teamName}`);
                    const body = encodeURIComponent(
                        `Team Registration Details:\n\n` +
                        `Team Name: ${teamName}\n` +
                        `Team Captain: ${teamCaptain}\n` +
                        `Contact Email: ${contactEmail}\n` +
                        `Contact Phone: ${document.getElementById(`${formPrefix}contact-phone`).value}\n` +
                        `Discord ID: ${document.getElementById(`${formPrefix}discord-id`).value}\n\n` +
                        `Player 1 (Captain): ${document.getElementById(`${formPrefix}player1`).value} - ${document.getElementById(`${formPrefix}riot-id1`).value}\n` +
                        `Player 2: ${document.getElementById(`${formPrefix}player2`).value} - ${document.getElementById(`${formPrefix}riot-id2`).value}\n` +
                        `Player 3: ${document.getElementById(`${formPrefix}player3`).value} - ${document.getElementById(`${formPrefix}riot-id3`).value}\n` +
                        `Player 4: ${document.getElementById(`${formPrefix}player4`).value} - ${document.getElementById(`${formPrefix}riot-id4`).value}\n` +
                        `Player 5: ${document.getElementById(`${formPrefix}player5`).value} - ${document.getElementById(`${formPrefix}riot-id5`).value}\n\n` +
                        `Please send payment instructions to complete registration.\n`
                    );
                    
                    // Open email client with pre-filled data
                    window.location.href = `mailto:gravax.design@gmail.com?subject=${subject}&body=${body}`;
                    
                    // Show success message
                    alert(`Registration submitted! Your email client should open with all your team details. If not, please email your team information directly to gravax.design@gmail.com. Don't forget to join our Discord server at https://discord.gg/aHsnT3mKgX`);
                    
                    // Reset form
                    requiredFields.forEach(field => {
                        const input = document.getElementById(field);
                        if (input) input.value = '';
                    });
                });
            });
        });
    </script>
